{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "../../",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../../",
    "paths": {
      "@common/*": ["common/src/*"]
    }
  },
  "include": ["src/**/*", "../../common/src/**/*"],
  "exclude": ["node_modules"]
} 